{%- set css = "/_includes/main-intro/style.css" -%}
{% css page,
css %}
{%- set utilsCSS = "/_includes/utils.css" -%}
{% css page,
utilsCSS %}

<div class="{% className css, 'root' %}">
  <div class="{% className css, 'conf-detail' %}">
    <p>
      <span class="{% className css, 'date' %}">
        <span class="{% className css, 'month' %}">{% confDate conf.start,
          'MMMM' %}</span>
        <span class="{% className css, 'no-wrap' %}">
          <time datetime="{% isoDate conf.start %}">{% confDate conf.start,
            'DD' %}</time>-<time datetime="{% isoDate conf.end %}">{% confDate conf.end,
            'DD' %}</time>
        </span>
      </span>
      <span target="_blank" class="{% className css, 'location-main' %}">Virtual conference</span>
      <span class="{% className css, 'location-sub' %}">Wherever You Are</span>
    </p>
    <div class="{% className css, 'actions' %}">
      <div class="{% className css, 'register-outer' %}">
        <a href="{{conf.registerLink}}" rel="noopener noreferrer" target="_blank" class="{% className utilsCSS, 'register' %} {% className css, 'register' %}">Request an invite</a>
        (requires Google sign in)
      </div>
      {% set icslink = "fullevent.ics" %}
      {% include "add-to-cal/index.njk" %}
    </div>
  </div>
  <div class="{% className css, 'art-outer' %}">
    <div class="{% className css, 'art' %}"></div>
  </div>
</div>
